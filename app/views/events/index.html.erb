<head>
  <link href='http://fonts.googleapis.com/css?family=Inconsolata' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>
<a href="/" id="welcome_user"><i class="fa fa-user"></i> {{username}}</a>
<a href="/"><button id="logout-submit"><i class="fa fa-sign-out"></i>Sign Out</button></a>
<div class="event_container_shadow" ng-show="add_event_flag">
    <div class="event_container" ng-show="add_event_flag">
      <form class="event_form">
      <h4 class="event_title">{{new_event_title}}</h4>
      <div class="">
         <div class="col-md-6">
           <p>Date</p>
           <input type="date" id="event_date">
         </div>
         <div class="col-md-6">
           <p>Time</p>
           <input type="time" id="event_time">
         </div>
      </div>
      <div class="col-md-12">
        <p>Location</p>
        <input type="text" id="event_location">
      </div>
      <br>
      <div class="col-md-12">
        <p>Description</p>
        <textarea id="event_description" type="text"></textarea>
      </div>
      <button id="event_cancel" ng-click="cancelEvent()"><i class="fa fa-times"></i>Cancel</button>
      <button id="event_submit" ng-click="createEvent()"><i class="fa fa-check"></i>Create</button>
    </form>
    </div>
</div>
<div class="row event_row" ng-style="{opacity : (add_event_flag && '0.45') || '1'}">
  <div class="col-xs-4">
    <div class="event_list_container">
      <div class="event_list_item row">
        <div class="">
        <div class="col-xs-9">
            <h5>Picnic at A Street</h5>
            <p>05/23/2015</p>
            <p>123 A Street, Hayward CA</p>
        </div>
        <div class="col-xs-3">
          <h1>{{rsvp_num}}</h1>
        </div>
      </div>
        <button class="rsvp_button" ng-click="rsvp()"><i class="fa fa-plus-circle fa-3x" ng-hide="rsvped"></i>
          <i class="fa fa-times fa-3x" ng-show="rsvped"></i></button>
      </div>
    </div>
  </div>
  <div class="col-xs-8">
    <div class="event_detail_container">
      <div class="col-xs-9">
          <h3>Picnic at A Street <i class="fa fa-check-circle" ng-show="rsvped"></i></h3>
          <p>Time: Friday, May 23th 10:23 PM</p>
          <p>Location: 123 A St, Hayward</p>
          <iframe
          width="95%"
          height="400"
          frameborder="0" style="border:0"
          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD_5DhvoQsEthidNcgVeCE87Cxsp5R8SW0&q=123+A+Street,Hayward+CA">
          </iframe>
      </div>
      <div class="col-xs-3 attendants_panel">
        <br>
        <h4 style="font-style: normal; color: black">Attendants:</h4>
        <h5 ng-show="rsvped">{{username}}</h5>
      </div>
      <div style="padding-bottom: 10px; clear: both">
      </div>
      <div class="description_box">
